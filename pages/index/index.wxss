page{
  background: #f3f7fa;
}
 .head{
  background: #1ec15a
} 
.select_box{
  background: #fff;
  width: 30%;
  margin: 30rpx auto;
  position: relative;
  display: inline-block;
  margin-left: 8rpx;
  color: #2e5e86
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}


.unit{
  background: #fff;
  margin: 20rpx;
  border: #fff 1rpx solid
}
.unit_number{
  text-align: center;
  line-height: 90rpx;
  border-bottom: #f8f8f8 1px solid;
  color: #1ec15a;
  height: 90rpx
}
.unit_content{
  padding: 10rpx 0 10rpx
}
.unit_practice{
  overflow: hidden;
  display: inline-block;
  width: 48%;
  border-right: #f8f8f8 1px solid;
  
}
.unit_test{
  overflow: hidden;
  display: inline-block;
  width: 48%;
}

.title{
  color: #d3d3d3;
  font-size: 24rpx;
  line-height: 80rpx;
  height: 80rpx;
  padding-left: 50rpx
}
.percent{
  color: #1ec15a;
  font-size: 48rpx;
  line-height: 60rpx;
  height: 60rpx;
  padding-left: 50rpx
}
.btn-detail{
    width: 170rpx;
    height: 52rpx;
    background: #1ec15a;
    margin: 20rpx 30rpx 20rpx;
    border-bottom: 1rpx #fff solid;
    color: #fff;
    line-height: 52rpx;
    text-align: center
}
